<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Storage</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!-- Additional custom CSS -->
    <link rel="stylesheet" href="/stylesheets/assignmentsStyle.css">

</head>

<body>

    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/" class="brand-logo"><i class="material-icons left">school</i>Data Storage</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
                    <li><a href="/data"><i class="material-icons left">list</i> Data</a></li>
                    <li><a href="/categories"><i class="material-icons left">list</i> Categories</a></li>
                </ul>
            </div>
        </nav>
        <ul id="mobile-nav" class="sidenav">
            <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
            <li><a href="/data"><i class="material-icons left">list</i> Data</a></li>
            <li><a href="/categories"><i class="material-icons left">list</i> Categories</a></li>
        </ul>
    </header>

    <!-- Actual page content! -->
    <div class="container">
        <div class="section" id="list">
            <h1>Your Categories:</h1>
            <table>
                <thead>

                    <tr>
                        <th>Slot</th>
                        <th>Name</th>
                        <th># of Options</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    <% for (let i = 0; i < cats.length; i++) { %>
                    <tr>
                        <td><%= cats[i].id %></td>
                        <td><%= cats[i].name %></td>
                        <td><%= cats[i].count1 %></td>
                        <td>
                            <a class="btn-small waves-effect waves-light green" href="/categories/<%= cats[i].id %>">
                                <i class="material-icons right">edit</i>
                                Edit Options
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="section" id="add">
            <h3>Rename Categories:</h3>
            <form id="addForm" method="post">
                <div class="row">
                    <div class="input-field col s4">
                        <input type="text" id="title1" name="title1" class="validate" data-length="45" required value="<%= cats[0].name %>">
                        <label for="titleInput">Slot 1:</label>
                    </div>
                    
                    <div class="input-field col s4">
                        <input type="text" id="title2" name="title2" class="validate" data-length="45" required value="<%= cats[1].name %>">
                        <label for="titleInput">Slot 2:</label>
                    </div>

                    <div class="input-field col s4">
                        <input type="text" id="title3" name="title3" class="validate" data-length="45" required value="<%= cats[2].name %>">
                        <label for="titleInput">Slot 3:</label>
                    </div>

                </div>
                <button class="btn waves-effect waves-light" type="submit">
                    <i class="material-icons right">send</i>
                    Submit
                </button>
            </form>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Auto-initialize Materialize elements (Note - more specific initialization may be required for certain elements)-->
    <script> M.AutoInit();</script>

</body>

</html>