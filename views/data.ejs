<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Storage</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!-- Additional custom CSS -->
    <link rel="stylesheet" href="/stylesheets/assignmentsStyle.css">

</head>

<body>

    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/" class="brand-logo"><i class="material-icons left">school</i>Data Storage</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
                    <li><a href="/data"><i class="material-icons left">list</i> Data</a></li>
                    <li><a href="/categories"><i class="material-icons left">list</i> Categories</a></li>
                </ul>
            </div>
        </nav>
        <ul id="mobile-nav" class="sidenav">
            <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
            <li><a href="/data"><i class="material-icons left">list</i> Data</a></li>
            <li><a href="/categories"><i class="material-icons left">list</i> Categories</a></li>
        </ul>
    </header>


    <!-- Actual page content! -->
    <div class="container">
        <div class="section" id="list">
            <h1>Your Data:</h1>
            <table>
                <thead>

                    <tr>
                        <th><%= stuff[0].title%></th>
                        <th><%= stuff[0].slotId1 %></th>
                        <th><%= stuff[0].slotId2 %></th>
                        <th><%= stuff[0].slotId3 %></th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    <% for (let i = 4; i < stuff.length; i++) { %>
                    <tr>
                        <td><%= stuff[i].title%></td>
                        <td><%= stuff[i].slotId1 %></td>
                        <td><%= stuff[i].slotId2 %></td>
                        <td><%= stuff[i].slotId3 %></td>
                        <td>
                            <a class="btn-small waves-effect waves-light" href="/data/<%= i - 3 %>">
                                <i class="material-icons right">edit</i>
                                Info/Edit
                            </a>
                            <a class="btn-small waves-effect waves-light red" href="/data/<%= i - 3 %>/delete">
                                <i class="material-icons right">delete</i>
                                Delete
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="section" id="add">
            <h2>Add data:</h2>
            <form id="addForm">
                <div class="row">
                    <div class="input-field col s6">
                        <input type="text" id="titleInput" name="title" class="validate" data-length="45" required>
                        <label for="titleInput">Name:</label>
                    </div>
                    
                    <div class="input-field col s6">
                        <select type="number" id="slot1input" name="slot1" required>
                            <option value="" disabled selected></option>
                            <% for (let i = 0; i < stuff[1].description.length; i++) { %>
                            <option value=i><%= stuff[1].description[i] %></option>
                            <% } %>
                          </select>
                          <label for="slot1Input"><%= stuff[0].slotId1 %></label>
                    </div>

                    <div class="input-field col s6">
                        <select type="number" id="slot2Input" name="slot2" required>
                            <option value="" disabled selected></option>
                            <% for (let i = 0; i < stuff[2].description.length; i++) { %>
                            <option value=i><%= stuff[2].description[i] %></option>
                            <% } %>
                          </select>
                          <label for="slot2Input"><%= stuff[0].slotId2 %></label>
                    </div>

                    <div class="input-field col s6">
                        <select type="number" id="slot3Input" name="slot3" required>
                            <option value="" disabled selected></option>
                            <% for (let i = 0; i < stuff[3].description.length; i++) { %>
                            <option value=i><%= stuff[3].description[i] %></option>
                            <% } %>
                          </select>
                          <label for="slot3Input"><%= stuff[0].slotId3 %></label>
                    </div>

                </div>
                <button class="btn waves-effect waves-light" type="submit">
                    <i class="material-icons right">send</i>
                    Submit
                </button>
            </form>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Auto-initialize Materialize elements (Note - more specific initialization may be required for certain elements)-->
    <script> M.AutoInit();</script>

</body>

</html>