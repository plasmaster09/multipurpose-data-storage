<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Storage</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!-- Additional custom CSS -->
    <link rel="stylesheet" href="/stylesheets/assignmentsStyle.css">
</head>

<body>

    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/" class="brand-logo"><i class="material-icons left">school</i>Data Storage</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
                    <li><a href="/data"><i class="material-icons left">list</i> Data</a></li>
                    <li><a href="/categories"><i class="material-icons left">list</i> Categories</a></li>
                </ul>
            </div>
        </nav>
        <ul id="mobile-nav" class="sidenav">
            <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
            <li><a href="/data"><i class="material-icons left">list</i> Data</a></li>
            <li><a href="/categories"><i class="material-icons left">list</i> Categories</a></li>
        </ul>
    </header>
    
    <!-- Actual page content! -->
    <div class="container">
        <div class="section flow-text" id="details">
            <h1><%= piece[1].title %></h1>
            <table>
                <tr>
                    <th><%= piece[0].slotId1 %>:</th>
                    <td><%= piece[1].slotId1 %></td>
                </tr>
                <tr>
                    <th><%= piece[0].slotId2 %>:</th>
                    <td><%= piece[1].slotId2 %></td>
                </tr>
                <tr>
                    <th><%= piece[0].slotId3 %>:</th>
                    <td><%= piece[1].slotId3 %></td>
                </tr>
                <tr>
                    <th>Detailed Description:</th>
                    <td>
                        <%= piece[1].description %>
                    </td>
                </tr>
            </table>
        </div>

        <div class="section" id="controls">
            <a class="btn-large waves-effect waves-light orange left modal-trigger" href="#edit">
                <i class="material-icons right">edit</i>
                Edit
            </a>
            <a class="btn-large waves-effect waves-light red right" href="/data/<%= piece[1].dataId %>/delete">
                <i class="material-icons right">delete</i>
                Delete
            </a>
        </div>


        <div class="modal" id="edit">

            <div class="modal-content">

                <h2>Edit item:</h2>
                <form id="updateForm">
                    <div class="row">
                        <div class="input-field col s6">
                        <input type="text" id="titleInput" name="title" class="validate" data-length="45" required value="<%= piece[1].title %>">
                        <label for="titleInput">Name:</label>
                    </div>
                    <div class="input-field col s6">
                        <select type="number" id="slot1input" name="slot1" required>
                            <option value="" disabled selected><%= piece[1].slotId1 %></option>
                            <% for (let i = 0; i < piece[2].description.substring(1, piece[2].description.length - 1).replaceAll("\"", "").split(",").length; i++) { %>
                            <option value=i><%= piece[2].description.substring(1, piece[2].description.length - 1).replaceAll("\"", "").split(",")[i] %></option>
                            <% } %>
                          </select>
                          <label for="slot1Input"><%= piece[0].slotId1 %>:</label>
                    </div>

                    <div class="input-field col s6">
                        <select type="number" id="slot1input" name="slot1" required>
                            <option value="" disabled selected><%= piece[1].slotId2 %></option>
                            <% for (let i = 0; i < piece[3].description.substring(1, piece[3].description.length - 1).replaceAll("\"", "").split(",").length; i++) { %>
                            <option value=i><%= piece[3].description.substring(1, piece[3].description.length - 1).replaceAll("\"", "").split(",")[i] %></option>
                            <% } %>
                          </select>
                          <label for="slot1Input"><%= piece[0].slotId2 %>:</label>
                    </div>

                    <div class="input-field col s6">
                        <select type="number" id="slot1input" name="slot1" required>
                            <option value="" disabled selected><%= piece[1].slotId3 %></option>
                            <% for (let i = 0; i < piece[4].description.substring(1, piece[4].description.length - 1).replaceAll("\"", "").split(",").length; i++) { %>
                            <option value=i><%= piece[4].description.substring(1, piece[4].description.length - 1).replaceAll("\"", "").split(",")[i] %></option>
                            <% } %>
                          </select>
                          <label for="slot1Input"><%= piece[0].slotId3 %>:</label>
                    </div>
    
                    </div>
                </form>
                <!-- A section for the footer of the modal -->
                <div class="modal-footer">
                    <!-- Since the submit button is not within the form, it must have the form attribute specified-->
                    <button class="btn waves-effect waves-light " type="submit" form="updateForm">
                        <i class="material-icons right">send</i>
                        Submit
                    </button>
                    <button class="modal-close waves-effect waves-green btn-flat" >Never Mind</button>
                </div>
                
            </div>

        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Auto-initialize Materialize elements (Note - more specific initialization may be required for certain elements)-->
    <script> M.AutoInit();</script>

</body>

</html>