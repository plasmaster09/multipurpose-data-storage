<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Storage</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!-- Additional custom CSS -->
    <link rel="stylesheet" href="/stylesheets/assignmentsStyle.css">

</head>

<body>

    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/" class="brand-logo"><i class="material-icons left">school</i>Data Storage</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
                    <li><a href="/data"><i class="material-icons left">list</i> Data</a></li>
                    <li><a href="/categories"><i class="material-icons left">list</i> Categories</a></li>
                    <% if (isLoggedIn) { %>
                        <li><a href="/profile"><i class="material-icons left">person</i> Hello, <%=user.name%></a> </li>
                        <li><a href="/logout" class="btn red">Logout</a></li>                        
                    <% } else { %>
                        <li><a href="/login" class="btn blue">Login</a></li>
                    <% } %>
                </ul>
            </div>
        </nav>
        <ul id="mobile-nav" class="sidenav">
            <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
            <li><a href="/data"><i class="material-icons left">list</i> Data</a></li>
            <li><a href="/categories"><i class="material-icons left">list</i> Categories</a></li>
            <% if (isLoggedIn) { %>
                <li><a href="/profile"><i class="material-icons left">person</i> Hello, <%=user.name%></a> </li>
                <li><a href="/logout" class="btn red">Logout</a></li>                        
            <% } else { %>
                <li><a href="/login" class="btn blue">Login</a></li>
            <% } %>
        </ul>
    </header>


    <!-- Actual page content! -->
    <div class="container">
        <div class="section" id="list">
            <h1>Category Options:</h1>
            <table>
                <thead>

                    <tr>
                        <th>ID</th>
                        <th><%= cat[0].typeName %></th>
                    </tr>

                </thead>
                <tbody>
                    <% for (let i = 2; i < cat.length; i++) { %>
                    <tr>
                        <td><%= cat[i].typeId %></td>
                        <td><%= cat[i].typeName %></td>
                        <td>
                            <a class="btn-small waves-effect waves-light red" href="/categories/<%= cat[1].typeName %>/<%= cat[i].typeId %>/delete">
                                <i class="material-icons right">delete</i>
                                Delete
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="section" id="add">
            <h2>Add option:</h2>
            <form id="addForm" method="post">
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" id="titleInput" name="title" class="validate" data-length="45" required>
                        <label for="titleInput">Name:</label>
                    </div>

                </div>
                <button class="btn waves-effect waves-light" type="submit">
                    <i class="material-icons right">send</i>
                    Submit
                </button>
            </form>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Auto-initialize Materialize elements (Note - more specific initialization may be required for certain elements)-->
    <script> M.AutoInit();</script>

</body>

</html>